     
     <div class="grid_3" style="padding-bottom:20px;">
        <%= link_to "New Article", admin_new_article_path, :class => "button orange", :style=>"color:black;", :id=>"new_article"%>
        <%= link_to "New Section", '#', :class => "button blue", :style=>"color:black;"%>
        <%= link_to "Upload Asset", '#', :class => "button purple", :style=>"color:black;"%>
     </div>

     <div class="box grid_12">
       <div class="box-head"><h2>Articles</h2></div>
       <div class="box-content no-pad">
       <table class="display" id="example">
       <thead>
         <tr>
           <th>Article</th>
           <th>Tags</th>
           <th>Comments</th>
           <th>Published</th>
           <th>Author</th>
           <th>Actions</th>
         </tr>
       </thead>
       <tbody>
       <%  @articles.each_with_index do |article,i| %>
         <tr class="<%= (i%2 == 0) ? "even" : "odd"%>">
           <td><span id="<%=i%>_title"><%= article.title %></span></td>
           <td><span id="<%=i%>_tags"><%=  article.tags %></span></td>
           <td><span id="<%=i%>_comments">none</span></td>
           <td><span id="<%=i%>_time"><%= article.created_at.strftime("%x") %></span></td>
           <td><span id="<%=i%>_name"><%=  article.user.name%></span></td>
           <td><%= link_to image_tag('cross.png'), admin_delete_article_path(article.id), :style=>"padding-right:20px;", :class=>"confirm", :title=>"Are you sure you want to delete this Article?"%>  <%= link_to image_tag('pencil.png'), admin_edit_article_path(article.id) %></td>
         </tr>
         <% end %>  
       </tbody>
     </table>
       </div>
     </div>


