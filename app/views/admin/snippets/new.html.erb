<div class="box grid_8">
  <div class="box-head"><h2>Create New Snippet</h2></div>
  <div class="box-content">
    <%= form_for @snippet, :as => :snippet, :url => admin_create_snippet_url, :html => {:class => 'block-content form'} do |f| %>

        <div class="form-row">
          <p class="form-label">Name:</p>

          <div class="form-item"><%= f.text_field :name %></div>
        </div>

        <div class="form-row">
          <p class="form-label">Content:</p>

          <div class="form-item"><%= f.text_area :content, :class => "markdown-content" %></div>
        </div>

        <div style="float:right;">
          <input type="submit" class="button yellow" value="Create Snippet">
        </div>

    <% end %>
    <div class="clear"></div>
  </div>
</div>



<div class="grid_8">
  <% @snippet.errors.full_messages.each do |msg| %>
      <div class="ad-notif-error"><p><%= msg %></p></div>
  <% end %>
</div>


<div class="box grid_8">
  <div class="box-head"><h2>Snippets</h2></div>
  <div class="box-content no-pad">
    <table class="display" id="dt3">
      <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @snippets.sort_by { |x| x.created_at }.reverse.each do |snippet| %>
          <tr>
            <td><%= snippet.name %></td>
            <td align="center"><%= link_to image_tag('cross.png'), admin_delete_snippet_path(snippet.id), :style => "padding-right:20px;", :class => "confirm", :title => "Are you sure you want to delete this Section?" %>  <%= link_to image_tag('pencil.png'), admin_edit_snippet_path(snippet.id) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<script>
    CodeMirror.fromTextArea(document.getElementsByClassName("markdown-content")[0], {
        mode:'markdown',
        matchBrackets:true,
        theme:"eclipse"
    });


    $('#dt3').dataTable({
        "bJQueryUI":true,
        "sPaginationType":"full_numbers"
    });

</script>
