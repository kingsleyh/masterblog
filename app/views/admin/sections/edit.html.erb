<div class="box grid_8">
  <div class="box-head"><h2>Edit Section</h2></div>
  <div class="box-content">
    <%= form_for @section, :as => :section, :url => admin_update_section_url, :html => {:class => 'block-content form'} do |f| %>

        <div class="form-row">
          <p class="form-label">Name:</p>

          <div class="form-item"><%= f.text_field :name %></div>
        </div>

        <div style="float:right;">
          <input type="submit" class="button yellow" value="Update Section">
        </div>

    <% end %>
    <div class="clear"></div>
  </div>
</div>

<div class="grid_8">
  <% @section.errors.full_messages.each do |msg| %>
      <div class="ad-notif-error"><p><%= msg %></p></div>
  <% end %>
</div>


